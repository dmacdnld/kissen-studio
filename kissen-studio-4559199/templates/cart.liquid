<div class="soft-half--sides">
    {% if cart.item_count > 0 %}
            <form action="/cart" method="post" id="cart" class="cart">
                {% for item in cart.items %}
                    <div class="repel-half--bottom soft-half box--zeta">
                        <a href="{{ item.product.url }}" class="display--block repel-half--bottom">
                            {{ item.product.title }}
                        </a>
                        <div class="grid">
                            <div class="grid__item one-third vert--middle">
                                <img class="one-whole" src="{{ item.product.featured_image | product_img_url: 'thumbnail' }}" alt="{{ item.product.featured_image.alt | escape }}">
                            </div><!--
                         --><div class="grid__item two-thirds">
                                <div class="grid">
                                    <div class="grid__item one-half vert--top">
                                        {{ item.price | money }}
                                    </div><!--
                                 --><div class="grid__item one-third vert--top">
                                        <select name="updates[{{ item.variant.id }}]" id="quantity-{{ item.variant.id }}">
                                            {% for item.product.variant.inventory_quantity %}
                                                <option value="{{ forloop.index }}" {% if forloop.index == item.quantity %}selected{% endif %}>{{ forloop.index }}</option>
                                            {% endfor %}
                                        </select>
                                        <!-- <input type="text" size="4" pattern="[0-9]*" name="updates[{{item.variant.id}}]" id="quantity-{{ item.variant.id }}" class="quantity" value="{{ item.quantity }}" min="1"> -->
                                    </div>
                                </div>
                                <div class="text--right milli">
                                    <a href="/cart/change/{{item.variant.id}}?quantity=0">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- <table>
                        <tr>
                            <th class="item price">Price</th>
                            <th class="item qty">Quantity</th>
                            <th class="item remove">Delete</th>
                            <th class="item total">Total</th>
                        </tr>
                        <tr id="cart-item-{{item.variant.id}}" class="cart-item">
                            <td class="item price">{{ item.price | money }}</td>
                            <td class="item qty">
                                <input type="text" size="4" pattern="[0-9]*" name="updates[{{item.variant.id}}]" id="quantity-{{ item.variant.id }}" class="quantity" value="{{ item.quantity }}" min="1" onfocus="this.select();">
                            </td>
                            <td class="item remove"><a href="/cart/change/{{item.variant.id}}?quantity=0">Remove</a></td>
                            <td class="item price">{{ item.line_price | money }}</td>
                        </tr>
                    </table> -->
                {% endfor %}
                <div class="text--right">
                    <div class="repel--bottom">Total: <strong>{{ cart.total_price | money }}</strong></div>
                    <input class="button" type="submit" id="update-cart" name="update" value="Update">
                    <input class="button" type="submit" name="checkout" value="Checkout">
                </div>
            </form>
    {% else %}
        <p>It appears that your cart is currently empty!</p>
    {% endif %}
</div>