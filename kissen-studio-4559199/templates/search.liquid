<div class="soft-half--sides">
    <form action="/search" method="get" class="search-form" role="search">
        <label class="accessibility" for="search">Search</label>
        <input id="search" class="search__input one-whole" name="q" type="text" placeholder="Search"><!--
     --><button class="search__button" type="submit">
            <span class="accessibility">Search</span>
            <span class="icon icon--search" aria-hidden="true"></span>
        </button>
    </form>

    {% if search.performed %}
        {% paginate search.results by 10 %}
            {% if search.results_count == 0 %}
                <p>Your search for "{{ search.terms }}" did not yield any results.</p>
            {% else %}
                <ol>
                    {% for item in search.results %}
                        <li>{{ item.title | link_to: item.url }}</li>
                    {% endfor %}
                </ol>
            {% endif %}
            {% if paginate.pages > 1 %}
                {{ paginate | default_pagination }}
            {% endif %}
        {% endpaginate %}
    {% endif %}
</div>